{
  "name": "skynet-lite",
  "version": "0.1.0",
  "description": "Personal AI assistant with Telegram, hardware control, and memory",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"PORT=3001 tsx watch src/index.ts\" \"npm run dev --prefix web\"",
    "dev:backend": "PORT=3001 tsx watch src/index.ts",
    "dev:frontend": "npm run dev --prefix web",
    "build": "npm run build --prefix web && tsc",
    "build:backend": "tsc",
    "build:frontend": "npm run build --prefix web",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "better-sqlite3": "^11.7.0",
    "cheerio": "^1.0.0",
    "dotenv": "^17.2.3",
    "execa": "^9.5.2",
    "express": "^4.21.2",
    "googleapis": "^146.0.0",
    "grammy": "^1.35.0",
    "node-cron": "^3.0.3",
    "ollama": "^0.5.12",
    "openai": "^4.78.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
